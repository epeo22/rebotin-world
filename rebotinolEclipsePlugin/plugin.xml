<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Rebotinol Category"
            id="rebotinolEclipsePlugin.commands.category">
      </category>
      <command
            name="Rebotinol command"
            categoryId="rebotinolEclipsePlugin.commands.category"
            id="rebotinolEclipsePlugin.commands.rebotinolCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="rebotinolEclipsePlugin.commands.rebotinolCommand"
            class="edu.upb.lp.rebotinol.handlers.RebotinolSwingHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="rebotinolEclipsePlugin.commands.rebotinolCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Rebotinol Menu"
               mnemonic="M"
               id="rebotinolEclipsePlugin.menus.rebotinolMenu">
            <command
                  commandId="rebotinolEclipsePlugin.commands.rebotinolCommand"
                  mnemonic="S"
                  id="rebotinolEclipsePlugin.menus.rebotinolCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="rebotinolEclipsePlugin.toolbars.rebotinolToolbar">
            <command
                  commandId="rebotinolEclipsePlugin.commands.rebotinolCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="rebotinolEclipsePlugin.toolbars.rebotinolCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
