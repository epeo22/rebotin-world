<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Rebotinol Category"
            id="rebotinolEclipsePlugin.commands.category">
      </category>
      <command
            name="Rebotinol command"
            categoryId="rebotinolEclipsePlugin.commands.category"
            id="rebotinolEclipsePlugin.commands.rebotinolCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="rebotinolEclipsePlugin.commands.rebotinolCommand"
            class="edu.upb.lp.rebotinol.handlers.RebotinolSwingHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="rebotinolEclipsePlugin.commands.rebotinolCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Rebotinol Menu"
               mnemonic="M"
               id="rebotinolEclipsePlugin.menus.rebotinolMenu">
            <command
                  commandId="rebotinolEclipsePlugin.commands.rebotinolCommand"
                  mnemonic="S"
                  id="rebotinolEclipsePlugin.menus.rebotinolCommand"
                  label="Ejecutar a rebotin">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="rebotinolEclipsePlugin.toolbars.rebotinolToolbar">
            <command
                  commandId="rebotinolEclipsePlugin.commands.rebotinolCommand"
                  icon="icons/Rebotin_small.png"
                  tooltip="Ejecutar a rebotin"
                  id="rebotinolEclipsePlugin.toolbars.rebotinolCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
<!--Product configuration-->
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="edu.upb.lp.rebotinol.product.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Rebotin Perspective"
            class="edu.upb.lp.rebotinol.product.Perspective"
            id="edu.upb.lp.rebotinol.product.perspective">
      </perspective>
   </extension>
   <extension
         id="reboproduct"
         point="org.eclipse.core.runtime.products">
      <product
            application="rebotinolEclipsePlugin.application"
            name="Rebotin World">
         <property name="appName" value="Rebotin World"/>
         <property name="aboutImage" value="icons/Rebotin.png"/> 
         <property
               name="aboutText"
               value="Rebotin World&#x0A;Universidad Privada Boliviana&#x0A;&#x0A;Autores:&#x0A;  Alexis Marechal&#x0A;  Alfredo Villalba&#x0A;  Jorge Loza&#x0A;  Mauricio Loza"/>
         <property
               name="startupProgressRect"
               value="5,275,445,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="edu.upb.lp.rebotinol.product.View"
            id="test2.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="test2.view"
               minimized="false"
               relationship="left"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
      </perspectiveExtension>
   </extension>
</plugin>
